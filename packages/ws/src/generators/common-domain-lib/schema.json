{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "common-domain-lib",
  "type": "object",
  "properties": {
    "domain": {
      "type": "string",
      "x-prompt": "Domain?",
      "description": "Domain name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "name": {
      "type": "string",
      "x-prompt": "Name?",
      "description": "Common Project Name",
      "default": "common",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": ["domain"]
}
